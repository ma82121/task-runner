  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "src/scripts/**/*.{js,jsx}": [
      "yarn eslint-format",
      "git add"
    ],
    "src/styles/**/*.scss": [
      "yarn stylelint-format",
      "git add"
    ]
