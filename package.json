{
  "name": "task-runner",
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "build": "webpack --mode=production --config ./webpack/webpack.config.prod.js",
    "dev": "webpack-dev-server --mode=development --config ./webpack/webpack.config.dev.js",
    "build2": "node ./tasks/index.js --mode dev",
    "dev2": "node ./tasks/index.js --mode prod",
    "test": "jest",
    "eslint-format": "eslint \"src/scripts/**/*.{js,jsx}\" --fix",
    "stylelint-format": "stylelint --syntax scss \"src/styles/**/*.scss\" --fix",
    "create-favicon": "node ./tasks/create-favicon.js",
    "sprite": "spritesmith"
  },
  "browserslist": [
    "> 1% in JP",
    "Android >= 4",
    "iOS >= 10"
  ],
